<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="com.com.machinistcalculator.ui.speedsandfeeds.SpeedsAndFeedsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rpmLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#80ffffff"
            android:padding="10dp"
            android:text="RPM"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/rpmEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="#80FFFFFF"
            android:ems="10"
            android:gravity="right"
            android:inputType="number|numberDecimal"
            android:singleLine="true"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sfmLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#80ffffff"
            android:padding="10dp"
            android:text="SFM"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/sfmEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="#80FFFFFF"
            android:ems="10"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fptLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#80ffffff"
            android:padding="10dp"
            android:text="FPT"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/ftpEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="#80FFFFFF"
            android:ems="10"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ipmLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#80ffffff"
            android:padding="10dp"
            android:text="IPM"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/ipmEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="#80FFFFFF"
            android:ems="10"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numTeethLabelTextView"
            android:layout_width="@dimen/labelWidth"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#80ffffff"
            android:padding="10dp"
            android:text="@string/teeth"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/teethspinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="#80ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/diaLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80ffffff"
            android:padding="10dp"
            android:text="Dia"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/diaEditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="#80FFFFFF"
            android:ems="10"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>


